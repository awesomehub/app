{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm",
    "schematicCollections": ["@angular-eslint/schematics", "@ngrx/schematics"]
  },
  "newProjectRoot": "projects",
  "projects": {
    "awesomehub": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "inlineTemplate": true,
          "skipTests": true
        },
        "@schematics/angular:class": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        },
        "@angular-eslint/schematics:application": {
          "setParserOptionsProject": true
        },
        "@angular-eslint/schematics:library": {
          "setParserOptionsProject": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "ah",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": "dist",
            "index": {
              "input": "src/index.build.html",
              "output": "index.html"
            },
            "polyfills": ["src/polyfills.ts"],
            "tsConfig": "tsconfig.app.json",
            "aot": false,
            "sourceMap": true,
            "assets": [
              "src/assets/images",
              "src/manifest.webmanifest",
              {
                "glob": "**/*",
                "input": "src/data",
                "ignore": ["objects/**", "sitemap.xml", "robots.txt"],
                "output": "/data/"
              },
              {
                "glob": "{sitemap.xml,robots.txt}",
                "input": "src/data",
                "output": "/"
              }
            ],
            "styles": ["src/styles.css"],
            "scripts": [],
            "fileReplacements": [
              {
                "replace": "src/environment.ts",
                "with": "src/environment.build.ts"
              }
            ],
            "browser": "src/main.ts"
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "600kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kb",
                  "maximumError": "8kb"
                }
              ],
              "outputHashing": "all",
              "aot": true,
              "optimization": true,
              "extractLicenses": true,
              "namedChunks": true
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "options": {
            "host": "0.0.0.0"
          },
          "configurations": {
            "production": {
              "buildTarget": "awesomehub:build:production"
            },
            "development": {
              "buildTarget": "awesomehub:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n",
          "options": {
            "buildTarget": "awesomehub:build"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"],
            "fix": true
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "type": "component"
    },
    "@schematics/angular:directive": {
      "type": "directive"
    },
    "@schematics/angular:service": {
      "type": "service"
    },
    "@schematics/angular:guard": {
      "typeSeparator": "."
    },
    "@schematics/angular:interceptor": {
      "typeSeparator": "."
    },
    "@schematics/angular:module": {
      "typeSeparator": "."
    },
    "@schematics/angular:pipe": {
      "typeSeparator": "."
    },
    "@schematics/angular:resolver": {
      "typeSeparator": "."
    }
  }
}
